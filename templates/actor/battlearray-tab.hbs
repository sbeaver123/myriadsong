<div class="tab attributes" data-group="primary" data-tab="battlearray">
    <div class="heading-box"><span class="heading">Battle Array</span></div>
    <div class="indent-box">
        <table class="battlearray">
            <tr>
                <th>{{localize "MYRIADSONG.initiative"}}</th>
                <th>{{localize "MYRIADSONG.soak"}}</th>
                <th>{{localize "MYRIADSONG.dodge"}}</th>
                <th>{{localize "MYRIADSONG.rally"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="battlearray.initative" value="{{system.battlearray.initiative}}"/>
                </td>
                <td>
                    <input name="battlearray.soak" value="{{system.battlearray.soak}}"/>
                    &nbsp;
                    <a class="battleroll" data-attr="soak"><i class="fas fa-dice"></i></a>
                </td>
                <td>
                    <input name="battlearray.dodge" value="{{system.battlearray.dodge}}"/>
                    &nbsp;
                    <a class="battleroll" data-attr="dodge"><i class="fas fa-dice"></i></a>
                </td>
                <td>
                    <input name="battlearray.rally" value="{{system.battlearray.rally}}"/>
                    &nbsp;
                    <a class="battleroll" data-attr="rally"><i class="fas fa-dice"></i></a>
                </td>
            </tr>
            <tr>
                <th class="header">{{localize "MYRIADSONG.stride"}}</th>
                <th class="header">{{localize "MYRIADSONG.dash"}}</th>
                <th class="header">{{localize "MYRIADSONG.scramble"}}</th>
                <th class="header">{{localize "MYRIADSONG.run"}}</th>
            </tr>
            <tr>
                <td><input name="battlearray.stride" value="{{system.battlearray.stride}}"/></td>
                <td><input name="battlearray.dash" value="{{system.battlearray.dash}}"/></td>
                <td>
                    <input name="battlearray.scramble" value="{{system.battlearray.scramble}}"/>
                    &nbsp;
                    <a class="battleroll" data-attr="scramble"><i class="fas fa-dice"></i></a>
                </td>
                <td><input name="battlearray.run" value="{{system.battlearray.run}}"/></td>
            </tr>
        </table>
    </div>

    <div class="heading-box"><span class="heading">{{localize "MYRIADSONG.outfit"}}</span></div>
    <div class="indent-box">
        <table class="battlearray item-list">
            <tr>
                <th class="left">{{localize "MYRIADSONG.name"}}</th>
                <th class="centre">{{localize "MYRIADSONG.armourdice"}}</th>
                <th class="left">{{localize "MYRIADSONG.skillbonuses"}}</th>
                <th class="left">{{localize "MYRIADSONG.description"}}</th>
                <th></th>
            </tr>
            {{#each outfits as |outfit index|}}
            <tr class="item" data-item-id="{{outfit.id}}">
                <td class="nowrap">{{outfit.name}}</td>
                <td class="centre">{{outfit.system.armour}}</td>
                <td>{{outfit.system.bonuses}}</td>
                <td>{{outfit.system.descString}}</td>
                <td class="nowrap">
                    <a class="item-edit" data-type="gift">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="item-delete" data-type="gift">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
        <div>
            <a class="item-create" data-type="outfit" title='{{localize "MYRIADSONG.addoutfit"}}'><i class="fas fa-plus"></i></a>
        </div>
    </div>

    <div class="heading-box"><span class="heading">{{localize "MYRIADSONG.weapons"}}</span></div>
    <div class="indent-box">
        <table class="battlearray attacks item-list">
            <tr>
                <th class="left">{{localize "MYRIADSONG.attack"}}</th>
                <th class="left">{{localize "MYRIADSONG.threat"}}</th>
                <th class="left">{{localize "MYRIADSONG.strike"}}</th>
                <th class="left">{{localize "MYRIADSONG.dice"}}</th>
                <th class="left">{{localize "MYRIADSONG.effects"}}</th>
                <th class="left">{{localize "MYRIADSONG.notes"}}</th>
                <th></th>
            </tr>
            {{#each weapons as |weapon index|}}
            <tr class="item" data-item-id="{{weapon.id}}">
                <td><a class="weapon-view">{{weapon.name}}</a></td>
                <td>{{weapon.system.threat}}</td>
                <td>{{weapon.system.strike}}</td>
                <td>
                    <input class="weapon-dice" name="weapon.system.pool" 
                        placeholder="{{weapon.system.dice}}"
                        value="{{weapon.system.pool}}"/>
                    &nbsp;
                    <a class="weapon-roll">
                        <i class="fas fa-dice"></i>
                    </a>
                </td>
                <td>
                    {{weapon.system.effectString}}
                </td>
                <td>
                    {{weapon.system.descriptorString}}
                </td>
                <td>
                    <a class="item-edit" data-type="gift">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="item-delete" data-type="gift">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
        <div>
            <a class="item-create" data-type="weapon" title='{{localize "MYRIADSONG.addwpn"}}'><i class="fas fa-plus"></i></a>
        </div>
    </div>

    <div class="heading-box"><span class="heading">{{localize "MYRIADSONG.damage"}}</span></div>
    <div class="indent-box">
        <table class="battlearray damage">
            <tr>
                <td>{{localize "MYRIADSONG.damages.reeling.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="reeling"
                    name="system.damage.reeling" {{#if (eq system.damage.reeling true)}}checked{{/if}}/></td>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.reeling.desc"}}</td>
                <td colspan="6"></td>
            </tr>
            <tr>
                <td>{{localize "MYRIADSONG.damages.hurt.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="hurt"
                     name="system.damage.hurt" {{#if (eq system.damage.hurt true)}}checked{{/if}}/></td>
                <td>{{localize "MYRIADSONG.damages.panicked.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="panicked"
                    name="system.damage.panicked" {{#if (eq system.damage.panicked true)}}checked{{/if}}/></td>
                <td>{{localize "MYRIADSONG.damages.injured.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="injured"
                    name="system.damage.injured" {{#if (eq system.damage.injured true)}}checked{{/if}}/></td>
            </tr>
            <tr>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.hurt.desc"}}</td>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.panicked.desc"}}</td>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.injured.desc"}}</td>
            </tr>
            <tr>
                <td>{{localize "MYRIADSONG.damages.dying.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="dying"
                    name="system.damage.dying" {{#if (eq system.damage.dying true)}}checked{{/if}}/></td>
                <td>{{localize "MYRIADSONG.damages.dead.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="dead"
                    name="system.damage.dead" {{#if (eq system.damage.dead true)}}checked{{/if}}/></td>
                <td>{{localize "MYRIADSONG.damages.overkill.label"}}</td>
                <td><input type="checkbox" class="damage" data-item-id="overkill"
                    name="system.damage.overkill" {{#if (eq system.damage.overkill true)}}checked{{/if}}/></td>
            </tr>
            <tr>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.dying.desc"}}</td>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.dead.desc"}}</td>
                <td colspan="2" class="description">{{localize "MYRIADSONG.damages.overkill.desc"}}</td>
            </tr>
        </table>
    </div>
</div>